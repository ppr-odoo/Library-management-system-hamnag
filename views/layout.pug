doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css", integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N", crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js", integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+", crossorigin="anonymous")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", type='text/css', href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css")       
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Mynerve&family=Roboto&family=Satisfy&display=swap", rel="stylesheet")
    link(rel="icon", href="book.ico", type="image/x-icon")
  body
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              li.home
                a(href='/catalog') Home
                //span.material-symbols-outlined.home-icon
                  | home
              li
                a(href='/catalog/books') All books
              li
                a(href='/catalog/authors') All authors
              li
                a(href='/catalog/genres') All genres
              li
                a(href='/catalog/bookinstances') All book-instances
              li
                hr
              li
                a(href='/catalog/author/create') Create new author
              li
                a(href='/catalog/genre/create') Create new genre
              li
                a(href='/catalog/book/create') Create new book
              li
                a(href='/catalog/bookinstance/create') Create new book copy
              li
                a(href='/catalog/admin/dashboard') Admin Dashboard
              li
                a(href='/catalog/user/profile') User Profile
              .author-link-sidebar
                a(href='https://github.com/thekrishpatel/Library-management-system', class='github-link-sidebar')
                  i.devicon-github-original

        div(class='col-sm-10 container')
          block content
            h1 Welcome to the Library Management System
            p Here you can manage your library's catalog, authors, genres, and book instances.

            // Search Bar Example
            form(action='/catalog/search', method='get', class='form-inline my-2 my-lg-0')
              input(type='text', name='q', placeholder='Search books, authors, genres...', class='form-control mr-sm-2')
              button(type='submit', class='btn btn-outline-success my-2 my-sm-0') Search

            // Book Listing Example
            h2 All Books
            each book in books
              div(class='card mb-4 shadow-sm')
                img(src=`${book.coverImageUrl}`, alt=`${book.title} Cover`, class='card-img-top')
                div(class='card-body')
                  h5(class='card-title') #{book.title}
                  p(class='card-text') Author: #{book.author}, Genre: #{book.genre}, Availability: #{book.availability}

            // Author Listing Example
            h2 All Authors
            each author in authors
              div(class='card mb-4 shadow-sm')
                div(class='card-body')
                  h5(class='card-title') #{author.name}
                  p(class='card-text') Biography: #{author.biography}
                  ul
                    each book in author.books
                      li #{book.title}

            // Genre Listing Example
            h2 All Genres
            each genre in genres
              div(class='card mb-4 shadow-sm')
                div(class='card-body')
                  h5(class='card-title') #{genre.name}
                  p(class='card-text') Description: #{genre.description}
                  p(class='card-text') Number of Books: #{genre.books.length}

            // Book Detail View Example
            h2 Book Detail View
            each book in books
              div(class='card mb-4 shadow-sm')
                img(src=`${book.coverImageUrl}`, alt=`${book.title} Cover`, class='card-img-top')
                div(class='card-body')
                  h5(class='card-title') #{book.title}
                  p(class='card-text') Author: #{book.author}, Genre: #{book.genre}, Availability: #{book.availability}
                  p(class='card-text') Summary: #{book.summary}
                  p(class='card-text') Publication Details: #{book.publicationDetails}

            // Author Detail View Example
            h2 Author Detail View
            each author in authors
              div(class='card mb-4 shadow-sm')
                div(class='card-body')
                  h5(class='card-title') #{author.name}
                  p(class='card-text') Biography: #{author.biography}
                  h6(class='card-subtitle mb-2 text-muted') Books by #{author.name}
                  ul
                    each book in author.books
                      li #{book.title}

            // Genre Detail View Example
            h2 Genre Detail View
            each genre in genres
              div(class='card mb-4 shadow-sm')
                div(class='card-body')
                  h5(class='card-title') #{genre.name}
                  p(class='card-text') Description: #{genre.description}
                  h6(class='card-subtitle mb-2 text-muted') Notable Authors in #{genre.name}
                  ul
                    each author in genre.authors
                      li #{author.name}
                  h6(class='card-subtitle mb-2 text-muted') Books in #{genre.name}
                  ul
                    each book in genre.books
                      li #{book.title}

            // Book Checkout/Return Form Example
            h2 Book Checkout/Return Form
            form(action='/catalog/checkout', method='post', class='form')
              label(for='libraryCardNumber') Library Card Number
              input(type='text', id='libraryCardNumber', name='libraryCardNumber', class='form-control', required)
              button(type='submit', class='btn btn-primary') Checkout

            // Admin Dashboard Example
            h2 Admin Dashboard
            // Add admin dashboard components here

            // User Profile Example
            h2 User Profile
            // Add user profile components here

  // Additional scripts or content can be added here
